    "examples": [
        {
            "title": "Simple button",
            "example": {
                "data": [
                    {
                        "type": "buttons/btn",
                        "label": "Primary button",
                        "theme": "primary"
                    },
                    {
                        "type": "buttons/btn",
                        "label": "Secondary button",
                        "theme": "secondary"
                    },
                    {
                        "type": "buttons/btn",
                        "label": "Tertiary button",
                        "theme": "tertiary"
                    }
                ]
            }
        },
        {
            "title": "Button with block modifier",
            "notes":"Block buttons stretch to the full width of their parent.",
            "example": {
                "type": "buttons/btn",
                "label": "Hello",
                "theme": "primary",
                "block": true
            }
        },
        {
            "title": "Button with a block modifier for small devices",
            "example": {
                "type": "buttons/btn",
                "label": "Shrink the screen and see me stretch",
                "theme": "primary",
                "mobile": true
            }
        },
        {
            "title": "Button with a bounce modifier",
            "example": {
                "type": "buttons/btn",
                "label": "Hover over me and see me bounce",
                "theme": "primary",
                "bounce": true
            }
        },
        {
            "title": "Button with an icon",
            "notes":"Using this type of button assumes there’s an inline-block element with a class of .i inside the button element.",
            "example": {
                "type": "buttons/btn",
                "label": "I’m a button with an icon",
                "theme": "secondary",
                "icon": 
                    {
                        "name":"caret-down",
                        "color":"dark-blue"
                    }
                
            }
        },
        { 
            "notes":"Buttons can also be icons only:",
            "example": {
                "type": "buttons/btn",
                "theme": "secondary",
                "href": "#",
                "icon": 
                    {
                        "name":"caret-down",
                        "color":"dark-blue"
                    }
                
            }
        }
        
    ]
