{% macro print(dir) %}
    <ul>
        {% for page in dir %}
            <li>
                <a href="{{ page.path }}">{{ page.data['title'] }}</a>

                {% if page.children %}
                    {{ print(page.children) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% macro nav_children(dir, current) %}
    <ul>
        {% for page in dir %}
            <li>
                {% if page.path != current %}<a href="{{ page.path }}">{% endif %}
                    {{ page.data['title'] }}
                    {% if page.path != current %}</a>{% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}


{% macro get_api_example(name) %}
 
