{% endmacro %}





{% macro global_nav( theme, logo, icon_color) %}

    {% set item = { type:"global-nav", theme: theme, logo:logo, icon_color:icon_color }  %}
    
    {{ item|component }}

{% endmacro %}


{% macro banner( img, title, subtitle, theme ) %}

    {% set item = { type:"banner", img:img, title:title, subtitle:subtitle, theme:theme }  %}
    
    {{ item|component }}

{% endmacro %}

{% macro action_icon( icon, text, href, theme, size ) %}

    {% set item = { type:"buttons/action-icon", action:[{ icon:icon, text:text, href:href, theme:theme, size:size} }]  %}

    {{ item|component }}

{% endmacro %}

{% macro component_header(title) %}

    {% set item = { type:"pattern-library/header", title:title}  %}
    
    {{ item|component }}

{% endmacro %}


{% macro site_header(breadcrumb, headline, step_name, image, subnav, layout, title, grid_modifier) %}

    {% set item = { type:"global/header", breadcrumb:breadcrumb, "headline":headline,"step_name":step_name, "image":image, subnav:subnav, "layout":layout, title:title, grid_modifier:grid_modifier}  %}
    
    {{ item|component }}

{% endmacro %}


{% macro pattern_library_subnav(dir) %}

    {% set item = { type:"header-subnav", data: dir }  %}
    
    {{ item|component }}

{% endmacro %}

{% macro nav_parent(parent) %}
    <a href="{{ parent.path }}">{{ parent.data.title }}</a>
{% endmacro %}