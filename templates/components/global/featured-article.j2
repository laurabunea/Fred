<div class='theme--fred'>

    <div class='[ wrapper ]'>

        <div class='[ {{item.layout}} ]'>

            <div class='[ grid grid--float ]'>

                <div class='[ col large-two-thirds medium-full-size ]  pl-0--q-medium-down u-right'>
                               
                    <a href='{{ item.href }}' >   
                        <img src='{{ item.src }}' alt='{{ item.title}}' class='img--responsive u-align-bottom' />
                    </a>  

                </div>

                <div class='[ col large-third medium-full-size ] u-left pr-0--q-large'>

                    <div class='section'>

                        <p class='u-uppercase tiny'>

                            <a href='{{item.parent_link }}' >
                                <strong>
                                    {{ item.category }} showcase
                                </strong>
                            </a> 
                             &middot; {{ item.date  }}
                        </p>

                        <h2>
                            <a href='{{ item.url }}'>
                                {{ item.title }}
                            </a>
                        </h2>

                        <p>
                            {{ item.listing_blurb }} 
                        </p>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>