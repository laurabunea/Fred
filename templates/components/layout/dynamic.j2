    <div class='[ wrapper ]'>
        
        {% if item.container_padding %}
        
        <div class='[ grid ] {{item.container_theme}}'>
            
            <div class='[  full-width {{item.gutters}} {{item.container_padding}} ] '>

        {% endif %}

            <div class='[ grid {{item.grid_modifier }} ] {{item.internal_theme}}'>

