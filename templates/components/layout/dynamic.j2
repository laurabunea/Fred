                    <div class="[ full-width {% if column.remove_gutters %}{% else %}gutters{% endif %} {{column.column_size }} ] {{column.column_theme }}">

                        {% if column.content_padding or column.content_theme %}
                        
                        <div class='{{column.content_theme}} {{column.content_padding}}'>
                            
                        {% endif %}

                            {{ column|children }}
                        
                        {% if column.content_padding or column.content_theme %}
                        
                        </div>

                        {% endif %}

                    </div>

                {% endfor %}

            </div>

        {% if item.container_padding %}

            </div>

        </div>

        {% endif %}

    </div>

