{% if item.external_theme %}

<div class='{{item.external_theme}}'>

{% endif %}

    <div class='[ wrapper ] {{item.internal_theme}}'>   

        {% if item.container_padding %}
        
        <div class='[ {{item.container_padding}} ] '>

        {% endif %}

            <div class='[ grid {{item.grid_modifier}} {% if item.grid_gutters %}gutters{% endif %} ] '>

                {% for column in item.columns %}
                    
                <div class="[ col{% if item.remove_column_gutters %}--no-gutters{% endif %} {{column_size }}  {{column.column_size}} ] {{column.column_theme}}">
                    
                    {% if column.content_theme or column.remove_content_gutters or column.content_padding %}
                    
                    <div class='{% if column.remove_content_gutters %}{% else %}gutters {% endif %} {{column.content_theme}} {{column.content_padding}}'>

                    {% endif %}

                        {{ column|children }}

                    {% if column.content_theme or column.remove_content_gutters or column.content_padding%}
                    
                    </div>
                    
                    {% endif %}

                </div>

                {% endfor %}
                
            </div>
        
        {% if item.container_padding %}
        
        </div>

        {% endif %}

    </div>

{% if item.external_theme %}

</div>

{% endif %}