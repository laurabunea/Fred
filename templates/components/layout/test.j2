{% if item.external_theme %}

<div class='{{item.external_theme}}'>

{% endif %}

    <div class='[ wrapper ]'>   

        <div class='[ {{item.container_padding}} ] '>

            <div class='[ grid {{item.grid_modifier }} ] {{item.internal_theme}}'>

                {% for column in item.columns %}

                    <div class="[ {{column.column_padding}} {{column.column_size }} ] {{column.column_theme }}">

                        <div class="{{column.content_theme }}">
                           
                            {{ column|children }}
                        
                        </div>
                        
                    </div>

                {% endfor %}

            </div>

        </div>

    </div>

{% if item.external_theme %}

</div>

{% endif %}