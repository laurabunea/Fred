{% if item.external_theme or item.background_image %}

<div class='{{item.external_theme}}' {% if item.background_image %} style="background-image:url('{{item.background_image}}'); background-size:cover; background-position: center center;" {% endif %}>

{% endif %}

    <div class='[ {{item.wrapper | default('wrapper')}} ]'>   

        {% if item.container_padding or item.internal_theme %}
        
            <div class='[ {{item.container_padding}} ] {{ item.internal_theme }} ' {% if item.internal_background_image %} style="background-image:url('{{item.internal_background_image}}'); background-size:cover; background-position: center center;" {% endif %}>

        {% endif %}

            <div class='[ grid {{item.grid_modifier}} {% if item.grid_gutters %}gutters{% endif %} ] '>

                {% for introduction in item.intro %}
                    
                <div class="[ col {{introduction.column_size}} ] {{introduction.column_theme}} {{introduction.column_class}}">
                    
                    {% if introduction.content_theme or introduction.remove_content_gutters or introduction.content_padding or introduction.content_background_image %}
                    
                    <div class='content {% if introduction.remove_content_gutters %}{% else %}gutters {% endif %} {{introduction.content_theme}} {{introduction.content_padding}}' {% if introduction.content_background_image %} style="background-image:url('{{introduction.content_background_image}}'); background-size:cover; background-position: center center;" {% endif %}>

                    {% endif %}

                        {{ introduction|children }}

                    {% if introduction.content_theme or introduction.remove_content_gutters or introduction.content_padding or introduction.content_background_image %}
                    
                    </div>
                    
                    {% endif %}

                </div>

                {% endfor %}

                {% for column in item.columns %}
                    
                <div class="[ col{% if item.remove_column_gutters %}--no-gutters{% endif %} {{column_size }} {{column.column_size}} ] {{column.column_theme}} {{column.column_class}}">
                    
                    {% if column.content_theme or column.remove_content_gutters or column.content_padding or column.content_background_image %}
                    
                    <div class='content  {% if column.remove_content_gutters %}{% else %}gutters {% endif %} {{column.content_theme}} {{column.content_padding}}' {% if column.content_background_image %} style="background-image:url('{{column.content_background_image}}'); background-size:cover; background-position: center center;" {% endif %}>

                    {% endif %}

                        {{ column|children }}

                    {% if column.content_theme or column.remove_content_gutters or column.content_padding or column.content_background_image %}
                    
                    </div>
                    
                    {% endif %}

                </div>

                {% endfor %}
                
            </div>
        
        {% if item.container_padding or item.internal_theme %}
        
            </div >

        {% endif %}

    </div>

{% if item.external_theme or item.background_image %}

</div>

{% endif %}